    },
    "[json]": {
    "editor.formatOnSave": true
    },
    "python.formatting.provider": "none",
    "dotnet.defaultSolution": "ConsoleApp1.sln",
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 80
}